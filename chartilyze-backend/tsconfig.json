{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2015"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@types/node"] // ✅ fixes `process.env` and Node globals
  },
  "include": ["convex"] // ✅ ensures your Convex functions compile
}
