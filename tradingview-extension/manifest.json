{
  "manifest_version": 3,
  "name": "Chartilyze - AI Trading Assistant",
  "version": "1.0.0",
  "description": "AI-powered trading assistant for TradingView with chat interface and journal integration",
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://chartilyze.com/*",
    "https://*.chartilyze.com/*",
    "https://decisive-tapir-206.convex.site/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.tradingview.com/*"],
      "js": ["src/content.js"],
      "css": ["public/styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "public/popup.html",
    "default_title": "Chartilyze AI Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/styles.css"],
      "matches": ["https://www.tradingview.com/*"]
    }
  ]
}