{
  "manifest_version": 3,
  "name": "Chartilyze AI Assistant",
  "version": "1.0",
  "description": "AI-powered trading assistant for TradingView",
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://decisive-tapir-206.convex.site/*",
    "https://your-chartilyze-domain.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "side_panel": {
    "default_path": "public/sidepanel.html"
  },
  "action": {
    "default_title": "Open Chartilyze Assistant"
  },
  "content_scripts": [
    {
      "matches": ["https://www.tradingview.com/*"],
      "js": ["src/content.js"]
    }
  ]
}